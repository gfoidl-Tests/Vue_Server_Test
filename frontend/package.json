{
    "name"       : "vue-server-test",
    "version"    : "0.1.0",
    "description": "Test for Vue with Server",
    "author"     : "gfoidl",
    "license"    : "(c) gfoidl, 2020-2021",
    "private"    : true,
    "sideEffects": true,
    "scripts"    : {
        "build"        : "webpack --mode=development",
        "build-watch"  : "webpack --mode=development --watch",
        "build-release": "webpack --mode=production",
        "start"        : "webpack-dev-server --open chrome --hotOnly",
        "start-server" : "serve ../backend/source/Server/wwwroot --no-clipboard --listen 8080",
        "dotnet-serve" : "cd ../backend/source/Server && dotnet run --urls http://localhost:8080",
        "test"         : "jest",
        "test-unit"    : "jest --projects tests/unit --verbose",
        "test-vue"     : "jest --projects tests/vue --verbose",
        "test-e2e"     : "jest --projects tests/e2e --verbose --reporters=default --reporters=jest-junit",
        "test-coverage": "jest --verbose --reporters=default --reporters=jest-junit --coverage"
    },
    "dependencies": {
        "axios"               : "^0.21.1",
        "bootstrap"           : "^4.6.0",
        "bootstrap-icons"     : "^1.3.0",
        "bootstrap-vue"       : "^2.21.2",
        "@microsoft/signalr"  : "^5.0.3",
        "vue"                 : "^2.6.12",
        "@vue/composition-api": "^1.0.0-rc.1"
    },
    "devDependencies": {
        "@babel/core"                       : "^7.12.16",
        "@types/expect-puppeteer"           : "^4.4.5",
        "@types/jest"                       : "^26.0.20",
        "@types/jest-environment-puppeteer" : "^4.4.1",
        "@types/jest-image-snapshot"        : "^4.1.3",
        "@vue/test-utils"                   : "^1.1.3",
        "babel-core"                        : "^7.0.0-bridge.0",
        "clean-webpack-plugin"              : "^3.0.0",
        "css-loader"                        : "^5.0.2",
        "file-loader"                       : "^6.2.0",
        "flush-promises"                    : "^1.0.2",
        "fork-ts-checker-webpack-plugin"    : "^6.1.0",
        "git-revision-webpack-plugin"       : "^3.0.6",
        "html-webpack-plugin"               : "^4.5.1",
        "jest"                              : "^26.6.3",
        "jest-image-snapshot"               : "^4.3.0",
        "jest-junit"                        : "^12.0.0",
        "jest-puppeteer"                    : "^4.4.0",
        "less"                              : "^4.1.1",
        "less-loader"                       : "^7.3.0",
        "mini-css-extract-plugin"           : "^1.3.7",
        "mini-svg-data-uri"                 : "^1.2.3",
        "nock"                              : "^13.0.7",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "preload-webpack-plugin"            : "^3.0.0-beta.4",
        "puppeteer"                         : "^2.1.1",
        "serve"                             : "^11.3.2",
        "style-loader"                      : "^2.0.0",
        "terser-webpack-plugin"             : "^4.2.3",
        "ts-jest"                           : "^26.5.1",
        "ts-loader"                         : "^7.0.5",
        "tsconfig-paths"                    : "^3.9.0",
        "tsconfig-paths-webpack-plugin"     : "^3.3.0",
        "tslib"                             : "^2.1.0",
        "typescript"                        : "^4.1.5",
        "url-loader"                        : "^4.1.1",
        "vue-jest"                          : "^3.0.7",
        "vue-loader"                        : "^15.9.6",
        "vue-template-compiler"             : "^2.6.12",
        "webpack"                           : "^4.46.0",
        "webpack-bundle-analyzer"           : "^3.9.0",
        "webpack-cli"                       : "^3.3.12",
        "webpack-dev-server"                : "^3.11.2"
    }
}
