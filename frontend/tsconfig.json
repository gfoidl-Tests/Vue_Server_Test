{
    "compilerOptions": {
        "baseUrl": ".",
        "paths"  : {
            "@/*"    : [ "src/ts/*" ],
            "@cmp/*" : [ "src/ts/components/*" ],
            "@ext/*" : [ "src/ts/extensions/*" ],
            "@img/*" : [ "src/images/*" ],
            "@svc/*" : [ "src/ts/services/*" ],
            "@view/*": [ "src/ts/views/*" ]
        },

        "target"          : "ES2015",
        "module"          : "CommonJS",
        "moduleResolution": "Node",
        "lib"             : [ "DOM", "ES2015", "WebWorker" ],
        "skipLibCheck"    : true,
        "incremental"     : true,
        "declaration"     : true,
        "declarationMap"  : true,

        "removeComments"        : true,
        "importHelpers"         : true,
        "experimentalDecorators": true,
        "sourceMap"             : true,
        "newLine"               : "lf",

        "strict"                    : true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny"             : true,
        "noImplicitReturns"         : true,
        "noUnusedLocals"            : false,
        "noUnusedParameters"        : true
    }
}
