{
    "compilerOptions": {
        "baseUrl": ".",
        "paths"  : {
            "@/*"     : [ "src/ts/*" ],
            "@cmp/*"  : [ "src/ts/components/*" ],
            "@ext/*"  : [ "src/ts/extensions/*" ],
            "@hub/*"  : [ "src/ts/hubs/*" ],
            "@img/*"  : [ "src/images/*" ],
            "@store/*": [ "src/ts/store/*" ],
            "@svc/*"  : [ "src/ts/services/*" ],
            "@view/*" : [ "src/ts/views/*" ]
        },

        "target"          : "ES2019",
        "module"          : "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop" : true,
        "lib"             : [ "DOM", "ESNext", "WebWorker" ],
        "skipLibCheck"    : true,
        "incremental"     : true,
        "declaration"     : true,
        "declarationMap"  : true,

        "removeComments"        : true,
        "importHelpers"         : true,
        "experimentalDecorators": true,
        "sourceMap"             : true,
        "newLine"               : "lf",

        "strict"                    : true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny"             : true,
        "noImplicitReturns"         : true,
        "noUnusedLocals"            : false,
        "noUnusedParameters"        : true
    }
}
